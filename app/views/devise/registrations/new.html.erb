<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-center mb-6">Sign Up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-4">
          <%= f.label :email, class: "block text-gray-700" %>
          <%= f.email_field :email, class: "w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "block text-gray-700"%>
          <%= f.password_field :password, class: "w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, class: "block text-gray-700" %>
          <%= f.password_field :password_confirmation, class: "w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
        </div>

        <div>
          <%= f.submit "Sign up", class: "w-full bg-blue-500 text-white p-2 rounded-lg hover:bg-blue-600 transition duration-300" %>
        </div>
      <% end %>

      <div class="mt-6 text-center">
      <%= link_to "Log in", new_session_path(resource_name), class: "text-blue-500 hover:underline" %>
    </div>
  </div>
</div>
