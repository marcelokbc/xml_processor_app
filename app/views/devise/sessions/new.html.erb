<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-center mb-6">Login</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-4">
            <%= f.label :email, class: "block text-gray-700" %> 
            <%= f.email_field :email, class: "w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
          </div>

          <div class="mb-4">
            <%= f.label :password, class: "block text-gray-700"%>
            <%= f.password_field :password, class: "w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
          </div>

          <div class="flex items-center justify-between mb-4">
            <% if devise_mapping.rememberable? %>
              <div class="flex items-center">
                <%= f.check_box :remember_me, class: "mr-2" %>
                <%= f.label :remember_me, class: "text-sm text-gray-600" %>
              </div>
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm text-blue-500 hover:underline" %>
            <% end %>
          </div>

          <div>
            <%= f.submit "Log in",  class: "w-full bg-blue-500 text-white p-2 rounded-lg hover:bg-blue-600 transition duration-300" %>
          </div>
        <% end %>
      <div class="mt-6 text-center">
      <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-500 hover:underline" %>
    </div>
