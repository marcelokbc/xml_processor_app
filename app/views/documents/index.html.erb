<section class="py-8 bg-blueGray-50">
  <div class="container px-4 mx-auto flex justify-center">
    <div class="p-7 pb-16 pt-12 border border-dark-blue rounded-3xl w-11/12">
      <div class="flex flex-wrap px-9 md:mb-4 mb-4">
        <div class="w-full md:w-1/2">
          <h2 class="text-3xl font-heading font-sourcesans font-medium text-gray-500">
            Documentos
          </h2>
          <%= form_with url: documents_path, method: :get, class: "mt-4" do %>
            <div class="flex items">
              <%= text_field_tag :query, params[:query], class: "w-full border border-gray-300 rounded-lg p-2", placeholder: "Buscar pelo NF "  %>
              <%= submit_tag "Buscar", class: "bg-blue-500 text-white p-2 rounded-lg hover:bg-blue-600 transition duration-300" %>
            </div>
            <div class="mt-4">
              <%= link_to "Limpar Filtros", documents_path, class: "text-blue-600 hover:underline" %>
            </div>
          <% end %>
          <div class="overflow-x-auto my-6">
            <div class="inline-block min-w-full overflow-hidden">
              <% if @documents.any? %>
                <ul>
                  <% @documents.each do |document| %>
                    <li>
                      <%= link_to "Ver RelatÃ³rio: #{document.file.filename}", document_path(document), class: "text-blue-600 hover:underline" %>
                    </li>
                  <% end %>
                </ul>
              <% else %>
                <p>Nenhum documento encontrado.</p>
              <% end %>
            </div>
          </div>
        </div>

        <div class="w-full md:w-1/2 max-w-max md:ml-auto">
          <%= link_to "Novo Documento", new_document_path, class: "inline-block bg-blue-500 text-white p-2 rounded-lg hover:bg-blue-600 transition duration-300" %>
        </div>
      </div>
    </div>
  </div>
</section>
